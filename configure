set -x
set -e

mkdir inst/tmp
mkdir inst/opencv/

cd inst/tmp/

Rscript -e 'download.file("https://github.com/opencv/opencv/archive/3.2.0.zip", "opencv-3.2.0.zip")'
Rscript -e 'unzip("opencv-3.2.0.zip")'

cp ../6810.patch opencv-3.2.0/cmake/6810.patch
cd opencv-3.2.0/cmake/
patch < 6810.patch
rm -rf 6810.patch
cd ../..

cd opencv-3.2.0
mkdir build
cd build

cmake -DWITH_IPP=ON -DINSTALL_CREATE_DISTRIB=ON -DCMAKE_BUILD_TYPE=RELEASE -DCMAKE_INSTALL_PREFIX=${R_PACKAGE_DIR}/opencv/ ../
make -j4
make install

cd ../../..

rm -rf tmp
