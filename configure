#!/bin/bash
CXX_STD=CXX11
set -x
set -e

# mkdir -p inst/tmp
# mkdir -p inst/opencv/

# cd inst/tmp/
cd ./src

Rscript -e 'download.file("https://github.com/opencv/opencv/archive/3.2.0.zip", "opencv-3.2.0.zip")'
Rscript -e 'unzip("opencv-3.2.0.zip")'

cp 6810.patch opencv-3.2.0/cmake/6810.patch
cd opencv-3.2.0/cmake/
patch < 6810.patch
rm -rf 6810.patch
# cd ../..

mkdir build
cd build

cmake -DWITH_IPP=ON \
	-DBUILD_opencv_world=OFF \
	-DBUILD_opencv_contrib_world=OFF \
	-DBUILD_matlab=OFF -DBUILD_PYTHON=OFF \
	-DINSTALL_CREATE_DISTRIB=ON \
	-DCMAKE_BUILD_TYPE=RELEASE \
	-DCMAKE_INSTALL_PREFIX=${R_PACKAGE_DIR}/opencv/ \
	../opencv-3.2.0
cd ../
# make -j4
# make install

# cd ../../..

# rm -rf tmp
