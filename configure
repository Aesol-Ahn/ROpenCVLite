#!/bin/bash
CXX_STD=CXX11
set -x
set -e

# mkdir -p inst/tmp
# mkdir -p inst/opencv/

# cd inst/tmp/
cd ./src


${R_HOME}/bin/Rscript -e 'download.file("https://github.com/opencv/opencv/archive/3.4.1.zip", "opencv-3.4.1.zip")'
${R_HOME}/bin/Rscript -e 'unzip("opencv-3.4.1.zip")'

cp ../OpenCVModule.cmake opencv-3.4.1/cmake/

cd opencv-3.4.1
mkdir build
cd build

cmake -DWITH_IPP=ON \
	-DBUILD_opencv_world=OFF \
	-DBUILD_opencv_contrib_world=OFF \
	-DBUILD_matlab=OFF -DBUILD_PYTHON=OFF \
	-DINSTALL_CREATE_DISTRIB=ON \
	-DCMAKE_BUILD_TYPE=RELEASE \
	-DCMAKE_INSTALL_PREFIX=${R_PACKAGE_DIR}/opencv/ \
	../
cd ../
# make -j4
# make install

# cd ../../..

# rm -rf tmp

