set -x
set -e

mkdir inst/tmp
mkdir inst/opencv/

cd inst/tmp/

Rscript -e 'download.file("https://github.com/Itseez/opencv/archive/3.1.0.tar.gz", "opencv_3.1.0.tar.gz")'
tar zxvf opencv_3.1.0.tar.gz

cd opencv-3.1.0

mkdir build
cd build

cmake -G "Unix Makefiles" -DBUILD_opencv_bioinspired=OFF -D CMAKE_BUILD_TYPE=RELEASE -D CMAKE_INSTALL_PREFIX=../../../opencv/ ../
make -j4
make install

cd ../../../

rm -rf tmp
